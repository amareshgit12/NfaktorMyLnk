<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="#FFFF"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="Custom Url"
            android:textColor="@color/logo_color"
            android:id="@+id/tv_customurl"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_originalUrl"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv_customurl"
            android:layout_marginTop="1dp"
            android:text="originalUrl"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_originalUrl"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Share"
                android:id="@+id/bt_shareUrl"
                android:background="@drawable/custombutton"
                android:layout_below="@+id/tv_originalUrl"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clicks : 18"
                android:layout_toRightOf="@id/bt_shareUrl"
                android:layout_below="@id/tv_originalUrl"
                android:id="@+id/tv_countsclick"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Aug"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_countsclick"
                android:layout_below="@id/tv_originalUrl"
                android:id="@+id/tv_date"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>